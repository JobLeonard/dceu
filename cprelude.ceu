var tostring
set tostring = func (v) {
    if type(v) == :pointer {
        var i
        set i = 0
        var n
        set n = `:number strlen($v.Pointer)`
        var str
        set str = #[]
        while i < n {
            set str[#str] = `:char ((char*)$v.Pointer)[(int)$i.Number]`
            set i = i + 1
        }
        move(str)
    } else {
        if type(v) == :number {
            ```
            static char str[255];
            snprintf(str, 255, "%g", $v.Number);
